<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.smartcode" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>SmartCode</name>
    <description>Sample Apache Cordova App</description>
    <author>
        SEYLLER Vincent - DALLEST Bryan
    </author>
    <platform name="android">
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.CAMERA" />
            <uses-feature android:name="android.hardware.camera" />
        </config-file>
    </platform>
    <icon src="www/img/logo.png" width="57" height="57" density="mdpi" />
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
